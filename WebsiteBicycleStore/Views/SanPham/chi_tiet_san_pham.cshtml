@model IEnumerable<WebsiteBicycleStore.Models.Product>
@{
    ViewBag.Title = "chi_tiet_san_pham";
    Layout = "~/Views/MenuLayout.cshtml";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-6">
                <img src="@Url.Content(item.Images)" width="500" height="500" @*style="padding:50px;margin:auto"*@ />
            </div>
            <div class="col-lg-6">
                <h2 style="text-align:center">@item.NameProduct</h2>
                <h3 style="margin-top:30px">Loại xe : @item.Category.NameCategory</h3>
                <h3 style="margin-top:20px">Tình trạng : @item.Available</h3>
                <h3 style="margin-top:20px">Giá tiền :$@item.UnitPrice </h3>
                <h3 style="margin-top:20px"> Chi Tiết :</h3>
                <p style="text-align:left">@item.Descriptions</p>
                <a href="#" class="btn">Add To Cart</a>
            </div>
        }

    </div>
</div>


@{
